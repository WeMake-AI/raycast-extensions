{
  "name": "raycast-extensions",
  "title": "Official WeMake AI Extensions for Raycast",
  "description": "Official WeMake AI Extensions for Raycast",
  "author": "WeMake AI (https://github.com/WeMake-AI)",
  "bugs": "https://github.com/WeMake-AI/raycast-extensions/issues",
  "homepage": "https://github.com/WeMake-AI/raycast-extensions",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "check": "bun run tsc && bun run lint && bun run prettier",
    "format": "bun run lint:fix && bun run prettier:fix",
    "tsc": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write"
  },
  "dependencies": {
    "@raycast/api": "^1.102.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/bun": "latest",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "markdownlint": "^0.38.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 120,
    "proseWrap": "always",
    "singleQuote": false,
    "semi": true,
    "useTabs": false
  }
}
